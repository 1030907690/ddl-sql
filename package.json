      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Zhou Zhongqing",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
