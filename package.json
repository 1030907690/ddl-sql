{
  "name": "ddl-sql",
  "version": "1.0.0",
  "description": "DDL SQL",
  "main": "main.js",
  "scripts": {
    "start": "NODEMON --exec electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.zzq.ddlsql",
    "win": {
      "icon": "./logo.ico",
      "target": [
